<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="button_red">
        <item name="android:background">@drawable/bt_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:padding">@dimen/button_margin</item>
    </style>

    <style name="button_blue">
        <item name="android:background">@drawable/bt_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:padding">@dimen/button_margin</item>
    </style>

    <style name="button_green">
        <item name="android:background">@drawable/bt_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:padding">@dimen/button_margin</item>
    </style>

</resources>
