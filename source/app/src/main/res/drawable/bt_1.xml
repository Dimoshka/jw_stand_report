<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_radius" />
            <gradient android:angle="90" android:endColor="@color/bt1_color_2" android:startColor="@color/bt1_color_1" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_radius" />
            <gradient android:angle="90" android:endColor="@color/bt1_color_2" android:startColor="@color/bt1_color_1" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_radius" />
            <gradient android:angle="90" android:endColor="@color/bt1_color_1" android:startColor="@color/bt1_color_2" />
        </shape>
    </item>
</selector>